{
  "name": "tool-box",
  "version": "1.0.0",
  "description": "tool-box",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --fix --ext .ts",
    "format": "prettier --write --parser typescript \"src/**/*.ts\"",
    "test": "jest --config jestconfig.json"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{.ts}": [
      "yarn lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaxPeak/tool-box.git"
  },
  "keywords": [
    "tools",
    "utils"
  ],
  "bugs": {
    "url": "https://github.com/MaxPeak/tool-box/issues"
  },
  "homepage": "https://github.com/MaxPeak/tool-box",
  "author": "MaxPeak",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  }
}
